{
  "#": "Self-Validating JSON Model",
  "$": "Model",
  "%": {
    "val": { "|":  [ null, true, -1, -1.0, "" ] },
    "any": { "|": [ "$val", [ "$any" ], { "": "$any" } ] },
    "none": { "|": [ ] },
    "meta": { "|": [ "", { "": "$any" } ] },
    "Array": [ "$Model" ],
    "Constraint": {
      "_@": "$Model",
      "/^(<=|>=|<|>)$/": { "|": [ -1, -1.0, "" ] },
      "/^(=|!=)$/": "$val",
      "?!": true
    },
    "Or": { "_|": [ "$Model" ] },
    "And": { "_&": [ "$Model" ] },
    "Xor": { "_^": [ "$Model" ] },
    "Add": { "_+": [ "$Model" ] },
    "Obj": { "": "$Model", "/^[|@&^+]$/": "$none" },
    "Elem": {
      "+": [
        { "?$": "", "?#": "$meta", "?%": { "": "$Model" } },
        { "|": [ "$Constraint", "$Or", "$And",
                 "$Xor", "$Add", "$Obj" ] }
      ]
    }
  },
  "|": [ "$val", "$Array", "$Elem" ]
}
