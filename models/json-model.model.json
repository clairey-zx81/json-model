{
  "#": "Self-Validating JSON Model (with + distributive over |)",
  "$": "Model",
  "%": {
    "val": { "|":  [ null, true, 0, 0.0, "" ] },
    "any": { "|": [ "$val", [ "$any" ], { "": "$any" } ] },
    "none": { "|": [ ] },
    "meta": { "|": [ "", { "": "$any" } ] },
    "Array": [ "$Model" ],
    "Constraint": {
      "_@": "$Model",
      "^(le|ge|lt|gt)$": { "|": [ 0, 0.0, "" ] },
      "^(eq|ne)$": "$val",
      "?distinct": true
    },
    "Or": { "_|": ["$Model"] },
    "And": { "_&": ["$Model"] },
    "ExOr": { "_^": ["$Model"] },
    "Add": { "_+": ["$Model"] },
    "Obj": { "": "$Model", "^[|@&^+]$": "$none" },
    "Elem": {
      "+": [
        { "?$": "", "?#": "$meta", "?%": {"": "$Model"} },
        { "|": [ "$Constraint", "$Or", "$And", "$ExOr", "$Add", "$Obj" ] }
      ]
    }
  },
  "|": [ "$val", "$Array", "$Elem" ]
}
