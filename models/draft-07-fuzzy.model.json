{
  "#": {
    "#": "Fuzzy JSON Model for JSON Schema Draft 07",
    "options": ["loose-int"]
  },
  "$": "Schema",
  "%": {
    "schemaArray": {"@": ["$Schema"], ">=": 1},
    "posInt": {"@": 0, ">=": 0},
    "simpleTypes": {"|": ["null", "boolean", "integer", "number", "string", "array", "object"]},
    "arrayTypes": {"@": ["$simpleTypes"], ">=": 1, "!": true},
    "ObjectSchema": {
	  "?$id": "$URI-REFERENCE",
	  "?$schema": "$URI",
      "?$comment": "",
	  "?title": "",
	  "?description": "",
	  "?default": "$ANY",
      "?readOnly": true,
      "?writeOnly": true,
      "?examples": ["$ANY"],
	  "?multipleOf": {"@": 0.0, ">": 0.0},
	  "?maximum": 0.0,
	  "?exclusiveMaximum": 0.0,
	  "?minimum": 0.0,
	  "?exclusiveMinimum": 0.0,
	  "?maxLength": "$posInt",
	  "?minLength": "$posInt",
	  "?pattern": "",
	  "?additionalItems": "$Schema",
	  "?items": {"|": ["$Schema", "$schemaArray"]},
	  "?maxItems": "$posInt",
	  "?minItems": "$posInt",
	  "?uniqueItems": true,
      "?contains": "$Schema",
	  "?maxProperties": "$posInt",
	  "?minProperties": "$posInt",
	  "?uniqueItems": true,
	  "?required": [""],
	  "?additionalProperties": "$Schema",
	  "?definitions": {"": "$Schema"},
	  "?properties": {"": "$Schema"},
      "?propertyNames": "$Schema",
	  "?patternProperties": {"": "$Schema"},
	  "?dependencies": {"": {"|": ["$Schema", [""]]}},
	  "?enum": {"@": ["$ANY"], ">=": 1, "!": true},
      "?const": "$ANY",
	  "?type": {"|": ["$simpleTypes", "$arrayTypes"]},
	  "?format": "",
      "?contentMediaType": "",
      "?contentEncoding": "",
	  "?if": "$Schema",
	  "?then": "$Schema",
	  "?else": "$Schema",
	  "?allOf": "$schemaArray",
	  "?anyOf": "$schemaArray",
	  "?oneOf": "$schemaArray",
	  "?not": "$Schema",
	  "?$ref": "$URI-REFERENCE",
      "": "$ANY"
    }
  },
  "|": [true, "$ObjectSchema"]
}
