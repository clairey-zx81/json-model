{
  "#": "Self-Validating JSON Model",
  "~": "https://json-model.org/models/json-model-v2",
  "$": {
    "#": "Definitions, without predefs of any kind",
    "": "https://json-model.org/models/json-model-v2",
    "Url": "/^((file|https?)://.+|\\./.*|\\.\\./.*)$/",
    "Val": { "|":  [ null, true, -1, -1.0, "" ] },
    "Any": { "|": [ "$Val", [ "$Any" ], { "": "$Any" } ] },
    "None": { "|": [ ] },
    "Comment": { "?#": "" },
    "Array": [ "$Model" ],
    "Constraint": {
      "_@": "$Model",
      "/^(<=|>=|<|>|≥|≤)$/": { "|": [ -1, -1.0, "" ] },
      "/^(=|!=|≠)$/": "$Val",
      "?!": true
    },
    "Or": { "_|": [ "$Model" ] },
    "And": { "_&": [ "$Model" ] },
    "Xor": { "_^": [ "$Model" ] },
    "Add": { "_+": [ "$Model" ] },
    "Obj": { "": "$Model", "/^[@|&^+/*]$/": "$None" },
    "Elem": {
      "+": [
        "$Comment",
        { "|": [ "$Constraint", "$Or", "$And", "$Xor", "$Add", "$Obj" ] }
      ]
    },
    "Trafo": {
      "|": [
        "$Model",
        {
          "+": [
            "$Comment",
            {
              "|": [
                {
                  "_/": [ "$Any" ],
                  "?*": { "|": [ [ "$Any" ], { "": "$Model" } ] }
                },
                {
                  "_*": { "|": [ [ "$Any" ], { "": "$Model" } ] },
                  "?/": [ "$Any" ]
                }
              ]
            }
          ]
        }
      ]
    },
    "Scalar": { "|": [ "=null", "=true", "=0", "=1", "=-1", "=0.0", "=1.0", "=-1.0", "" ] },
    "Model": { "|": [ "$Scalar", "$Array", "$Elem" ] },
    "Defs": { "/.+/": "$Model" },
    "Rename": { "/^\\..*$/": "/^([|&^+/*@~<>=!$%]|<=|>=|!=)$/" },
    "Rewrite": { "/^\\$.*$/": "$Trafo" },
    "Root": {
      "+": [
        {
          "#": "Special keywords only at the root of a model",
          "?~": "$Url",
          "?$": { "+": [ "$Comment", { "?": "$Url" }, "$Defs" ] },
          "?%": { "+": [ "$Comment", "$Rename", "$Rewrite" ] }
        },
        "$Elem"
      ]
    },
    "RootModel": { "|": [ "$Scalar", "$Array", "$Root" ] }
  },
  "@": "$RootModel"
}
