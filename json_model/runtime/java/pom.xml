<project xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.json-model</groupId>
  <artifactId>json-model</artifactId>
  <version>2.0b10</version>
  <packaging>jar</packaging>

  <name>JSON Model Java Runtime</name>
  <description>This runtime is needed to execute java code generated by the JSON Model compiler</description>
  <url>https://json-model.org/</url>
  <inceptionYear>2023</inceptionYear>

  <licenses>
    <license>
      <name>CC0-1.0</name>
      <url>https://spdx.org/licenses/CC0-1.0.html</url>
      <distribution>repo</distribution>
      <comments>Public Domain</comments>
    </license>
  </licenses>

  <organization>
    <name>CRI, Mines Paris - PSL</name>
    <url>https://www.cri.minesparis.psl.eu/</url>
  </organization>

  <developers>
    <developer>
      <id>fabien</id>
      <name>Fabien Coelho</name>
      <email>fabien.coelho@minesparis.psl.eu</email>
      <url>https://www.cri.minesparis.psl.eu/~coelho/</url>
      <organization>CRI, Mines Paris - PSL</organization>
      <timezone>Europe/Paris</timezone>
      <properties>
        <picUrl>https://www.cri.minesparis.psl.eu/~coelho/assets/fabien_large.jpg</picUrl>
      </properties>
    </developer>
  </developers>

  <scm>
    <url>https://github.com/clairey-zx81/json-model</url>
  </scm>

  <!-- it is unclear what minimal version should be set for compiling and dependencies -->
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <java.version>21</java.version>
    <maven.compiler.source>21</maven.compiler.source>
    <maven.compiler.target>21</maven.compiler.target>
    <maven.compiler.version>3.13.0</maven.compiler.version>
    <getopt.version>1.0.13</getopt.version>
    <gson.version>2.13.1</gson.version>
    <jackson.version>2.19.2</jackson.version>
    <jakarta.version>2.0.2</jakarta.version>
    <johnzon.version>2.0.2</johnzon.version>
  </properties>

  <!--
    NOTE about "provided":

    - only one JSON lib is actually needed at runtime.
    - getopt is only needed for executing the "main" file.
  -->
  <dependencies>
    <dependency>
      <groupId>gnu.getopt</groupId>
      <artifactId>java-getopt</artifactId>
      <version>[${getopt.version},)</version>
      <type>jar</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.google.code.gson</groupId>
      <artifactId>gson</artifactId>
      <version>[${gson.version},)</version>
      <type>jar</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-core</artifactId>
      <version>[${jackson.version},)</version>
      <type>jar</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-databind</artifactId>
      <version>[${jackson.version},)</version>
      <type>jar</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-annotations</artifactId>
      <version>[${jackson.version},)</version>
      <type>jar</type>
      <scope>provided</scope>
    </dependency>
    <!-- JSONP interface and a compliant implementation -->
    <!-- WTF, javax.json seems to depend on org.glassfish stuff? -->
    <!--
      <dependency>
        <groupId>javax.json</groupId>
        <artifactId>javax.json-api</artifactId>
        <version>[${json-api.version},)</version>
        <scope>provided</scope>
      </dependency>
    -->
    <dependency>
      <groupId>jakarta.json</groupId>
      <artifactId>jakarta.json-api</artifactId>
      <version>[${jakarta.version},)</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.johnzon</groupId>
      <artifactId>johnzon-core</artifactId>
      <version>[${johnzon.version},)</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>${project.basedir}/json_model</sourceDirectory>
    <directory>${project.basedir}/target</directory>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven.compiler.version}</version>
        <configuration>
          <source>${maven.compiler.source}</source>
          <target>${maven.compiler.target}</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
