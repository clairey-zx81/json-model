{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://json-model.org/json-model.schema.json",
  "title": "JSON Schema for JSON Model",
  "$defs": {
    "common": {
      "title": "Common Stuff",
      "type": "object",
      "properties": {
        "#": { "type": "string" }
      }
    },
    "simpleModel": {
      "enum": [ null, true, -1, 0, 1, -1.0, 0.0, 1.0, "" ]
    },
    "stringModel": { "type": "string", "minLength": 1 },
    "cmpValue": { "type": [ "integer", "number", "string" ] },
    "arrayModel": {
      "type": "array",
      "items": { "$ref": "#/$defs/Model" }
    },
    "simpleObject": {
      "type": "object",
      "$ref": "#/$defs/common",
      "patternProperties": { "^[@|^&+]$": false },
      "additionalProperties": { "$ref": "#/$defs/Model" }
    },
    "andModel": {
      "type": "object",
      "$ref": "#/$defs/common",
      "properties": {
        "&": { "$ref": "#/$defs/arrayModel" }
      },
      "required": [ "&" ]
    },
    "orModel": {
      "type": "object",
      "$ref": "#/$defs/common",
      "properties": {
        "|": { "$ref": "#/$defs/arrayModel" }
      },
      "required": [ "|" ]
    },
    "xorModel": {
      "type": "object",
      "$ref": "#/$defs/common",
      "properties": {
        "^": { "$ref": "#/$defs/arrayModel" }
      },
      "required": [ "^" ]
    },
    "addModel": {
      "type": "object",
      "$ref": "#/$defs/common",
      "properties": {
        "+": { "$ref": "#/$defs/arrayModel" }
      },
      "required": [ "+" ]
    },
    "constrainedModel": {
      "type": "object",
      "$ref": "#/$defs/common",
      "properties": {
        "@": { "$ref": "#/$defs/Model" },
        "=": { "$ref": "#/$defs/cmpValue" },
        "!=": { "$ref": "#/$defs/cmpValue" },
        "<=": { "$ref": "#/$defs/cmpValue" },
        ">=": { "$ref": "#/$defs/cmpValue" },
        "<": { "$ref": "#/$defs/cmpValue" },
        ">": { "$ref": "#/$defs/cmpValue" },
        "!": { "type": "boolean" }
      },
      "required": [ "@" ]
    },
    "objModel": {
      "description": "A model which uses an object representation",
      "oneOf": [
        { "$ref": "#/$defs/simpleObject" },
        { "$ref": "#/$defs/andModel" },
        { "$ref": "#/$defs/orModel" },
        { "$ref": "#/$defs/xorModel" },
        { "$ref": "#/$defs/addModel" },
        { "$ref": "#/$defs/constrainedModel" }
      ]
    },
    "Model": {
      "oneOf": [
        { "$ref": "#/$defs/simpleModel" },
        { "$ref": "#/$defs/stringModel" },
        { "$ref": "#/$defs/arrayModel" },
        { "$ref": "#/$defs/objModel" }
      ],
      "unevaluatedProperties": false
    },
    "defsModel": {
      "description": "Keywords available only at the root",
      "type": "object",
      "$ref": "#/$defs/objModel",
      "properties": {
        "~": {
          "description": "Meta Model URL",
          "type": "string",
          "format": "url"
        },
        "$": {
          "description": "local definitions",
          "type": "object",
          "properties": {
            "#": {"type": "string"}
           },
          "additionalProperties": { "$ref": "#/$defs/Model" }
        },
        "%": {
          "description": "renames and rewrites",
          "type": "object",
          "properties": {
            "#": {"type": "string"},
            "": {"type": "string"}
          },
          "patternProperties": {
            "^\\.": { "type": "string" }
          },
          "additionalProperties": { "$ref": "#/$defs/Model" }
        }
      },
      "unevaluatedProperties": false
    },
    "rootModel": {
      "oneOf": [
        { "$ref": "#/$defs/simpleModel" },
        { "$ref": "#/$defs/stringModel" },
        { "$ref": "#/$defs/arrayModel" },
        { "$ref": "#/$defs/defsModel" }
      ]
    }
  },
  "$ref": "#/$defs/rootModel"
}
