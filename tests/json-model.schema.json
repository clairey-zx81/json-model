{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://json-model.org/json-model.schema.json",
  "title": "JSON Schema for JSON Model",
  "$defs": {
    "common": {
      "title": "Common Stuff",
      "type": "object",
      "properties": {
        "$": { "type": "string" },
        "#": {
          "oneOf": [
            { "type": "string" },
            { "type": "object", "additionalProperties": true }
          ]
        }
      }
    },
    "simpleModel": {
      "type": [ "null", "boolean", "integer", "number", "string" ]
    },
    "cmpValue": { "type": [ "integer", "number", "string" ] },
    "arrayModel": {
      "type": "array",
      "items": { "$ref": "#/$defs/Model" }
    },
    "simpleObject": {
      "type": "object",
      "$ref": "#/$defs/common",
      "patternProperties": { "^[@|^&+]$": false },
      "additionalProperties": { "$ref": "#/$defs/Model" }
    },
    "andModel": {
      "type": "object",
      "$ref": "#/$defs/common",
      "properties": {
        "&": { "$ref": "#/$defs/arrayModel" }
      },
      "required": [ "&" ],
      "unevaluatedProperties": false
    },
    "orModel": {
      "type": "object",
      "$ref": "#/$defs/common",
      "properties": {
        "|": { "$ref": "#/$defs/arrayModel" }
      },
      "required": [ "|" ],
      "unevaluatedProperties": false
    },
    "xorModel": {
      "type": "object",
      "$ref": "#/$defs/common",
      "properties": {
        "^": { "$ref": "#/$defs/arrayModel" }
      },
      "required": [ "^" ],
      "unevaluatedProperties": false
    },
    "addModel": {
      "type": "object",
      "$ref": "#/$defs/common",
      "properties": {
        "+": { "$ref": "#/$defs/arrayModel" }
      },
      "required": [ "+" ],
      "unevaluatedProperties": false
    },
    "constrainedModel": {
      "type": "object",
      "allOf": [ { "$ref": "#/$defs/common" } ],
      "properties": {
        "@": { "$ref": "#/$defs/Model" },
        "=": { "$ref": "#/$defs/cmpValue" },
        "!=": { "$ref": "#/$defs/cmpValue" },
        "<=": { "$ref": "#/$defs/cmpValue" },
        ">=": { "$ref": "#/$defs/cmpValue" },
        "<": { "$ref": "#/$defs/cmpValue" },
        ">": { "$ref": "#/$defs/cmpValue" },
        "!": { "type": "boolean" }
      },
      "required": [ "@" ],
      "unevaluatedProperties": false
    },
    "objModel": {
      "oneOf": [
        { "$ref": "#/$defs/simpleObject" },
        { "$ref": "#/$defs/andModel" },
        { "$ref": "#/$defs/orModel" },
        { "$ref": "#/$defs/xorModel" },
        { "$ref": "#/$defs/addModel" },
        { "$ref": "#/$defs/constrainedModel" }
      ]
    },
    "Model": {
      "oneOf": [
        { "$ref": "#/$defs/simpleModel" },
        { "$ref": "#/$defs/arrayModel" },
        { "$ref": "#/$defs/objModel" }
      ]
    },
    "defsModel": {
      "type": "object",
      "allOf": [ { "$ref": "#/$defs/objModel" } ],
      "properties": {
        "%": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/Model" }
        }
      }
    },
    "rootModel": {
      "oneOf": [
        { "$ref": "#/$defs/simpleModel" },
        { "$ref": "#/$defs/arrayModel" },
        { "$ref": "#/$defs/defsModel" }
      ]
    }
  },
  "$ref": "#/$defs/rootModel"
}
